{
  "name": "pig",
  "private": true,
  "version": "0.0.0",
  "description": "A no-html framework for building enterprise web applications in Typescript",
  "keywords": [],
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/pig.cjs",
  "module": "./dist/pig.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mitchgibson/pig.git"
  },
  "scripts": {
    "build": "vite build",
    "dev": "npm link && vite build --mode development",
    "publish:test": "npm publish --dry-run",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "docs": "open docs/index.html",
    "docs:generate": "typedoc src/index.ts",
    "test:verbose": "vitest run --reporter verbose",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  }
}
